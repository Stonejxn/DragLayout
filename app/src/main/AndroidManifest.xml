<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.tibbytang.android.draglayoutexample">

    <application
        android:name=".DragApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="LockedOrientationActivity">
        <activity android:name=".DragMainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DragLeftActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DragRightActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DragTopActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".DragBottomActivity"
            android:screenOrientation="portrait" />
    </application>

</manifest>